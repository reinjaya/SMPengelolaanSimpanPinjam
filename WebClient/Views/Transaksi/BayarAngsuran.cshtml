@{
	Layout = "_AdminLayout";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
	<h1 class="h3 mb-0 text-gray-800"><i class="fas fa-fw fa-dolly-flatbed"></i> Data Transaksi</h1>

	<a onclick="backPinjamanAnggota()" class="btn btn-secondary btn-icon-split"><span class="icon text-white-50"><i class="fas fa-arrow-left"></i></span>
		<span class="text">Kembali</span>
	</a>
</div>

<div class="card shadow mb-4">
		<div class="card-body">
			<div class="row">
				<div class="form-group col-md-6">
					<label class="font-weight-bold">Kode Anggota</label>
					<input autocomplete="off" type="text" name="kode_anggota" value="" required class="form-control" readonly="readonly"/>
				</div>

				<div class="form-group col-md-6">
					<label class="font-weight-bold">Nama Anggota</label>
					<input autocomplete="off" type="text" name="nama_anggota" value="" required class="form-control" readonly="readonly"/>
				</div>

				<div class="form-group col-md-6">
					<label class="font-weight-bold">Kode Pinjam</label>
					<input autocomplete="off" type="text" name="kode_pinjam" value="" required class="form-control" readonly="readonly"/>
				</div>

				<div class="form-group col-md-6">
					<label class="font-weight-bold">Tanggal Pinjam</label>
					<input autocomplete="off" type="text" name="tanggal_pinjam" value="" required readonly class="form-control"/>
				</div>

				<div class="form-group col-md-6">
					<label class="font-weight-bold">Besar Pinjam</label>
					<input autocomplete="off" type="text" name="besar_pinjam" value="" required class="form-control" readonly="readonly"/>
				</div>
				<div class="form-group col-md-6">
					<label class="font-weight-bold">Lama Angsuran</label>
					<input autocomplete="off" type="text" name="lama_angsur" value="" required class="form-control" readonly="readonly"/>
				</div>
				<div class="form-group col-md-6">
					<label class="font-weight-bold">Angsuran</label>
					<input autocomplete="off" type="text" name="angsuran" value="" required class="form-control" readonly="readonly"/>
				</div>
				<div class="form-group col-md-6">
					<label class="font-weight-bold">Angsuran Ke</label>
					<input autocomplete="off" type="text" name="angsuran_ke" value="" required class="form-control" readonly="readonly"/>
				</div>
				<div class="form-group col-md-6">
					<label class="font-weight-bold">Denda</label>
					<input autocomplete="off" type="text" name="denda" value="Admin" required class="form-control" readonly="readonly"/>
				</div>
				<div class="form-group col-md-6">
					<label class="font-weight-bold">User Entri</label>
					<input autocomplete="off" type="text" name="user_entri" value="Admin" required class="form-control" readonly="readonly"/>
				</div>

				<div class="form-group col-md-6">
					<label class="font-weight-bold">Tanggal Entri</label>
					<input autocomplete="off" type="text" name="tgl_entri" value="@DateTime.Now.ToString("MM/dd/yyyy")" required class="form-control" readonly="readonly"/>
				</div>
			</div>
		</div>
		<div class="card-footer text-right">
			<button onclick="tambahAngsuranAnggota()" class="btn btn-success"><i class="fa fa-save"></i> Simpan</button>
			<button type="reset" class="btn btn-info"><i class="fa fa-sync-alt"></i> Reset</button>
		</div>
</div>