@{
	Layout = "_AnggotaLayout";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
	<h1 class="h3 mb-0 text-gray-800"><i class="fas fa-fw fa-location-arrow"></i> Data Pengajuan</h1>
	<div>
	<a onclick="tambahPinjamanAnggotaPage()" class="btn btn-success mr-1"> <i class="fa fa-plus"></i> Tambah Pinjaman</a>
	<a href="../Anggota/Pengajuan" class="btn btn-secondary btn-icon-split"><span class="icon text-white-50"><i class="fas fa-arrow-left"></i></span>
			<span class="text">Kembali</span>
	</a>
	</div>
</div>

<div class="card shadow mb-4">
	<!-- /.card-header -->
	<div class="card-header py-3">
		<h6 class="m-0 font-weight-bold text-primary"><i class="fa fa-table"></i> Daftar Data Pengajuan</h6>
	</div>

	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered text-center" id="TablePengajuanAnggota" width="100%" cellspacing="0">
				<thead class="bg-primary text-white">
					<tr align="center">
						<th width="5%">No</th>
						<th>Kode Pengajuan</th>
						<th>Tanggal Pengajuan</th>
						<th>Besar Pinjaman</th>
						<th>Status</th>
						<th>Tanggal Terima</th>
					</tr>
				</thead>
				<tbody>
				</tbody>
			</table>
		</div>
	</div>
</div>